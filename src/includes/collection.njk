<!DOCTYPE html>
<html lang="en">
	<head>
		{% include '_meta.njk' %}

		<link rel="stylesheet" href="/assets/css/style.css"/>
		<link rel="stylesheet" href="/assets/css/layout.css"/>
	</head>

	<body>
		{% include '_header.njk' %}

		<main>
			<h1>{{ title }}</h1>
			{{ content | safe }}

			<ul>
				{%- for post in collections.post -%}
					<li>
						<a href="{{ post.url }}">{{ post.data.title }}</a>
						<ul>
							<li>{{ post.data.date.toLocaleDateString(en-US, {year: 'numeric', month: 'long', day: 'numeric'}) }}</li>
							<li>{{ post.content | excerpt | safe }}</li>
						</ul>
					</li>
				{%- endfor -%}
			</ul>
		</main>

		{% include '_footer.njk' %}
	</body>
</html>